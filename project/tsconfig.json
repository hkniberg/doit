{
  "compilerOptions": {
    // Specifies the ECMAScript target version for the emitted JavaScript code.
    "target": "ESNext",

    // Specifies the module system for the output code.
    "module": "ESNext",

    "moduleResolution": "node",

    // Enables all strict type-checking options for better type safety.
    "strict": true,

    // Allows default imports from modules with no default export.
    // This does not affect code emit, just type checking.
    "esModuleInterop": true,

    // Specifies the output directory for the compiled JavaScript files.
    "outDir": "./build",

    // Specifies the root directory of input files.
    // Only use to control the output directory structure with `outDir`.
    "rootDir": "./src",

    // Skip type checking of all declaration files (.d.ts).
    // Useful for ignoring type issues in third-party modules.
    "skipLibCheck": true,

    // Ensures that casing in import statements matches the casing of the file names.
    "forceConsistentCasingInFileNames": true,

    // Generates corresponding .map files for debugging.
    // Helps map your TypeScript code back to the original source code.
    "sourceMap": true
  },
  // Specifies a list of glob patterns that match TypeScript files to be included in compilation.
  "include": ["src/**/*.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
